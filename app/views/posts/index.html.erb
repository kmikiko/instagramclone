<table>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= link_to user_path(post.user.id) do %>
          <p><%= image_tag (post.user.image.url), class: "rounded-circle", size: "50x50" if post.user.image && post.user.image.url %><p>
        <% end %>
      </td>
      <td>
        <p><%= post.user.name %><p>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to post_path(post.id) do %>
          <%= image_tag (post.image.url),size: "200x200" if post.image && post.image.url %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <h3><%= post.content %></h3>
      </td>
      <% if post.user == current_user %>
        <td>
          <p><%= link_to "edit", edit_post_path(post.id) %></p>
        </td>
        <td>
          <p><%= link_to 'delete', post_path(post.id), method: :delete ,data: { confirm: '削除していいですか？' } %></p>
        </td>
      <% else %>
        <td></td>
        <td></td>
      <% end %>  
    </tr>
  <% end %>
</table>

<table>
